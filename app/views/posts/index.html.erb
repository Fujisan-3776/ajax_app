<h1>AjaxApp</h1>
<%= form_with url:  "/posts", method: :post,id: "form" do |form| %>
  <%= form.text_field :content %>
  <%= form.submit '投稿する' , id: "submit" %>
<% end %>

<% @posts.each do |pos| %>
    <div class="post">
      <div class="post-date">
        投稿日時：<%= pos.created_at %>
      </div>
      <div class="post-content">
        <%= pos.content %>
      </div>
    </div>
<% end %>
